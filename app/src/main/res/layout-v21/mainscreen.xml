<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:stretchColumns="0,3">

            <TableRow android:layout_gravity="center">

                <TextView />

                <Button
                    android:id="@+id/calculators_button"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dip"
                    android:width="140dip"
                    android:height="140dip"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:drawableTop="@drawable/ic_calculator_svgrepo_com"
                    android:padding="20dip"
                    android:textColor="#000000"
                    android:text="@string/calculator_list_title" />

                <Button
                    android:id="@+id/diagnosis_button"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dip"
                    android:width="140dip"
                    android:height="140dip"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:drawableTop="@drawable/ic_stethoscope_svgrepo_com"
                    android:padding="20dip"
                    android:textColor="#000000"
                    android:text="@string/diagnosis_list_title" />

                <TextView />
            </TableRow>

            <TableRow android:layout_gravity="center">

                <TextView />

                <Button
                    android:id="@+id/reference_button"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dip"
                    android:width="140dip"
                    android:height="140dip"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:drawableTop="@drawable/ic_toolbox_svgrepo_com_2"
                    android:padding="20dip"
                    android:text="@string/reference_list_title"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/risk_scores_button"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dip"
                    android:width="140dip"
                    android:height="140dip"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:drawableTop="@drawable/ic_gauge_svgrepo_com"
                    android:padding="20dip"
                    android:textColor="#000000"
                    android:text="@string/risk_score_list_title" />

                <TextView />
            </TableRow>

        </TableLayout>
    </HorizontalScrollView>
    </ScrollView>
</RelativeLayout>

