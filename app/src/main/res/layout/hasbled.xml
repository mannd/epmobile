<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />
    <include layout="@layout/calculatebuttons" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/calculateButtonsLayout"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/hypertension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/htn_label" />

            <CheckBox
                android:id="@+id/abnormal_renal_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/abnormal_renal_label" />

            <CheckBox
                android:id="@+id/abnormal_liver_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/abnormal_liver_label" />

            <CheckBox
                android:id="@+id/stroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stroke_label" />

            <CheckBox
                android:id="@+id/bleeding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bleeding_label" />

            <CheckBox
                android:id="@+id/labile_inr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labile_inr_label" />

            <CheckBox
                android:id="@+id/age65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age65_label" />

            <CheckBox
                android:id="@+id/drug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drug_label" />

            <CheckBox
                android:id="@+id/etoh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etoh_label" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
