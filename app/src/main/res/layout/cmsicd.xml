<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cms_icd_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />
    <include layout="@layout/calculatebuttons" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/calculateButtonsLayout"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Header1"
                android:text="@string/secondary_prevention_label"/>

            <TextView
                style="@style/Header2"
                android:text="@string/personal_hx_vt_ca_label"/>

            <CheckBox
                android:id="@+id/icd_sus_vt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_sus_vt_label"/>

            <CheckBox
                android:id="@+id/icd_cardiac_arrest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_cardiac_arrest_label"/>

            <TextView
                style="@style/Header1"
                android:text="@string/primary_prevention_label"/>

            <CheckBox
                android:id="@+id/icd_mi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_mi_label"/>

            <CheckBox
                android:id="@+id/icd_ischemic_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_ischemic_cm_label"/>

            <CheckBox
                android:id="@+id/icd_nonischemic_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_nonischemic_cm_label"/>

            <CheckBox
                android:id="@+id/icd_familial_conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_familial_conditions_label"/>

            <TextView
                style="@style/Header1"
                android:text="@string/ejection_fraction_label"/>

            <RadioGroup
                android:id="@+id/icd_ef_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/icd_ef_gt_35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/icd_ef_gt_35_label"/>

                <RadioButton
                    android:id="@+id/icd_ef_lt_35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icd_ef_lt_35_label"/>

                <RadioButton
                    android:id="@+id/icd_ef_lt_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icd_ef_lt_30_label"/>
            </RadioGroup>

            <TextView
                style="@style/Header1"
                android:text="@string/nyha_class_label"/>

            <RadioGroup
                android:id="@+id/icd_nyha_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/icd_nyha1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/icd_nyha1_label"/>

                <RadioButton
                    android:id="@+id/icd_nyha2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icd_nyha2_label"/>

                <RadioButton
                    android:id="@+id/icd_nyha3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icd_nyha3_label"/>

                <RadioButton
                    android:id="@+id/icd_nyha4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icd_nyha4_label"/>
            </RadioGroup>

            <TextView
                style="@style/Header1"
                android:text="@string/other_indication_label"/>

            <CheckBox
                android:id="@+id/icd_replacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_replacement_label"/>

            <CheckBox
                android:id="@+id/icd_transplant_bridge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_transplant_bridge_label"/>

            <TextView
                style="@style/Header1"
                android:text="@string/waiting_period_label"/>

            <CheckBox
                android:id="@+id/icd_recent_cabg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_recent_cabg_label"/>

            <CheckBox
                android:id="@+id/icd_recent_mi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_recent_mi_label"/>

            <TextView
                style="@style/Header1"
                android:text="@string/exclusions_label"/>

            <CheckBox
                android:id="@+id/icd_revascularization_candidate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_revascularization_candidate_label"/>

            <TextView
                style="@style/Header1"
                android:text="@string/absolute_exclusions_label"/>

            <CheckBox
                android:id="@+id/icd_cardiogenic_shock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_cardiogenic_shock_label"/>

            <CheckBox
                android:id="@+id/icd_bad_prognosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_bad_prognosis_label"/>

            <CheckBox
                android:id="@+id/icd_brain_damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_brain_damage_label"/>

            <CheckBox
                android:id="@+id/icd_svt_uncontrolled_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_svt_uncontrolled_rate_label"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>