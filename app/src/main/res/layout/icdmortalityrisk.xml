<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/icd_mortality_risk_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />
    <include layout="@layout/calculatebuttons" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/calculateButtonsLayout"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <CheckBox
                android:id="@+id/very_high_risk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/very_high_risk_label" />

            <CheckBox
                android:id="@+id/nyha_greater_than_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nyha_greater_than_2_label" />

            <CheckBox
                android:id="@+id/age70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age70_label" />

            <CheckBox
                android:id="@+id/bun_greater_than_26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bun_greater_than_26_label" />

            <CheckBox
                android:id="@+id/qrs_greater_than_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qrs_greater_than_12_label" />

            <CheckBox
                android:id="@+id/afb_baseline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/afb_baseline_label" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>