<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                style="@style/Header1"
                android:text="@string/ecg_criteria_label" />

            <CheckBox
                android:id="@+id/spontaneous_type_1_ecg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spontaneous_type_1_ecg_label" />

            <CheckBox
                android:id="@+id/fever_type_1_ecg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fever_type_1_ecg_label" />

            <CheckBox
                android:id="@+id/type_2_3_ecg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type_2_3_ecg_label" />

            <TextView
                style="@style/Header1"
                android:text="@string/clinical_history_label" />

            <CheckBox
                android:id="@+id/unexplained_arrest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unexplained_arrest_label" />

            <CheckBox
                android:id="@+id/agonal_respirations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agonal_respirations_label" />

            <CheckBox
                android:id="@+id/arrhythmic_syncope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arrhythmic_syncope_label" />

            <CheckBox
                android:id="@+id/unclear_syncope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unclear_syncope_label" />

            <CheckBox
                android:id="@+id/afl_afb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/afl_afb_label" />

            <TextView
                style="@style/Header1"
                android:text="@string/brugada_family_history_label" />

            <CheckBox
                android:id="@+id/relative_definite_brugada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/relative_definite_brugada_label" />

            <CheckBox
                android:id="@+id/suspicious_scd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suspicious_scd_label" />

            <CheckBox
                android:id="@+id/unexplained_scd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unexplained_scd_label" />


            <TextView
                style="@style/Header1"
                android:text="@string/genetic_test_result_label" />

            <CheckBox
                android:id="@+id/pathogenic_mutation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pathogenic_mutation_label" />

             <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/calculate_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calculate_label" />

                <Button
                    android:id="@+id/clear_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clear_label" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/brugada_score_key" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/brugada_score_reference" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
