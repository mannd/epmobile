<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/estes_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />
    <include layout="@layout/calculatebuttons" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/calculateButtonsLayout"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
       >

            <CheckBox
                android:id="@+id/voltage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estes_voltage_label" />

            <CheckBox
                android:id="@+id/strain_without_dig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estes_strain_without_dig_label" />

            <CheckBox
                android:id="@+id/strain_with_dig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estes_strain_with_dig_label" />

            <CheckBox
                android:id="@+id/lae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estes_lae_label" />

            <CheckBox
                android:id="@+id/lad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estes_lad_label" />

            <CheckBox
                android:id="@+id/qrs_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estes_qrs_duration_label" />

            <CheckBox
                android:id="@+id/intrinsicoid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estes_intrinsicoid_label" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>