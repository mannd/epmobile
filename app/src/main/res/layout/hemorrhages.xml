<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hemorrhages_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />
    <include layout="@layout/calculatebuttons" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/calculateButtonsLayout"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/hepatic_or_renal_disease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hepatic_or_renal_disease_label" />

            <CheckBox
                android:id="@+id/etoh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etoh_hemorrhages_label" />

            <CheckBox
                android:id="@+id/malignancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/malignancy_label" />

            <CheckBox
                android:id="@+id/older"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/older_label" />

            <CheckBox
                android:id="@+id/platelet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/platelet_label" />

            <CheckBox
                android:id="@+id/rebleeding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rebleeding_label" />

            <CheckBox
                android:id="@+id/htn_uncontrolled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/htn_uncontrolled_label" />

            <CheckBox
                android:id="@+id/anemia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/anemia_label" />

            <CheckBox
                android:id="@+id/genetic_factors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/genetic_factors_label" />

            <CheckBox
                android:id="@+id/fall_risk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fall_risk_label" />

            <CheckBox
                android:id="@+id/stroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stroke_hemorrhages_label" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>