<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qt_prolongation_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />
    <include layout="@layout/calculatebuttons" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/calculateButtonsLayout"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <CheckBox
                android:id="@+id/age_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age_factor_label" />

            <CheckBox
                android:id="@+id/female_sex_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female_sex_factor_label" />

            <CheckBox
                android:id="@+id/loop_diuretic_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loop_diuretic_factor_label" />

            <CheckBox
                android:id="@+id/serum_k_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/serum_k_factor_label" />

            <CheckBox
                android:id="@+id/admission_qtc_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admission_qtc_factor_label" />

            <CheckBox
                android:id="@+id/acute_mi_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acute_mi_factor_label" />

            <CheckBox
                android:id="@+id/sepsis_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sepsis_factor_label" />

            <CheckBox
                android:id="@+id/heart_failure_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heart_failure_label" />

            <CheckBox
                android:id="@+id/one_qtc_drug_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_qtc_drug_factor_label" />

            <CheckBox
                android:id="@+id/two_qtc_drugs_factor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two_qtc_drugs_factor_label" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
