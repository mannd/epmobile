<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chadsvasc_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />
    <include layout="@layout/calculatebuttons" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/calculateButtonsLayout"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chf_label" />

            <CheckBox
                android:id="@+id/hypertension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/htn_label" />

            <CheckBox
                android:id="@+id/age75"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age75_label" />

            <CheckBox
                android:id="@+id/diabetes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diabetes_label" />

            <CheckBox
                android:id="@+id/stroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stroke_label" />

            <CheckBox
                android:id="@+id/vascular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vascular_label" />

            <CheckBox
                android:id="@+id/age65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age65_label" />

            <CheckBox
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female_label" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
