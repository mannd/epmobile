<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LeftColumnLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">3dip</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorOutline</item>
    </style>

    <style name="Header1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dip</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelLarge</item>
    </style>

    <style name="Header2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dip</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelLarge</item>
    </style>

    <style name="RightColumnValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">3dip</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    </style>

    <style name="WarfarinDayStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="WarfarinDayColumnStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="WarfarinDoseColumnStyle">
        <item name="android:textColor">?attr/colorTertiary</item>
    </style>

    <style name="TextAppearance.Calculator.Result"
        parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Calculator.Error"
        parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch" />
</resources>